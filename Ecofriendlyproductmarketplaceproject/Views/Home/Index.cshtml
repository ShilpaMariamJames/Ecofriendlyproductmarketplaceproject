@model IEnumerable<Ecofriendlyproductmarketplaceproject.Models.Product>

<h1 class="text-center">🌿 Welcome to the Eco-Friendly Product Marketplace 🌿</h1>

@if (Model != null && Model.Any())
{
    <h2 class="text-center">♻ Available Products ♻</h2>

    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="@Url.Content(product.ImagePath)" alt="@product.Name" class="card-img-top product-image" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="price">💲 @product.Price.ToString("C", new System.Globalization.CultureInfo("en-IN"))</p>
                            <form action="@Url.Action("AddToCart", "Cart", new { id = product.Id })" method="post">
                                <button type="submit" class="btn btn-success btn-block">🛒 Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<style>
    /* Homepage Styling */
    h1, h2 {
        color: #28a745;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .container {
        margin-top: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        margin-bottom: 20px;
    }

        .product-card:hover {
            transform: scale(1.05);
        }

    .product-image {
        height: 250px;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        text-align: center;
        padding: 15px;
    }

    .price {
        font-size: 18px;
        font-weight: bold;
        color: #1e7e34;
    }

    .btn-success {
        width: 100%;
        font-size: 16px;
        font-weight: bold;
    }

    .text-center {
        text-align: center;
    }
</style>





