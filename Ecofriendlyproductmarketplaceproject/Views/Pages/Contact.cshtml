@{
    ViewBag.Title = "Contact Us";
}

<div class="container contact-container">
    <h2 class="text-center">Contact Us 📞</h2>
    <p class="text-center">Have any questions? Reach out to us!</p>

    <div class="contact-info">
        <p><i class="fas fa-envelope"></i> Email: <a href="mailto:support@eco-friendly.com">support@eco-friendly.com</a></p>
        <p><i class="fas fa-phone"></i> Phone: +1 (123) 456-7890</p>
            </div>

    <h3>Send Us a Message</h3>
    <form>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Name" required>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Your Email" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" rows="4" placeholder="Your Message" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Send Message</button>
    </form>
</div>

<style>
    .contact-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .contact-info p {
        font-size: 16px;
        margin: 5px 0;
    }

    .contact-info i {
        color: #007bff;
        margin-right: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }
</style>



