@model IEnumerable<Ecofriendlyproductmarketplaceproject.Models.Product>

<h2>Browse Products</h2>

@if (TempData["Message"] != null)
{
    <p class="alert alert-success">@TempData["Message"]</p>
}

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImagePath))
                    {
                        <img src="@product.ImagePath" alt="@product.Name" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <form action="@Url.Action("Buy", "Product", new { id = product.Id })" method="post">
                        <button type="submit" class="btn btn-primary">Buy Now</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>




