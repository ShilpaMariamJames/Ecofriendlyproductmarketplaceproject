<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Eco-Friendly Marketplace</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header>
        <div class="navbar">
            <a href="@Url.Action("Index", "Home")">Home</a>

            @if (Session["UserId"] != null)
            {
                <a href="@Url.Action("Browse", "Product")">Browse Products</a>

                
                    var role = Session["Role"] != null ? Session["Role"].ToString() : "";
                    if (role == "Seller")
                    {
                        <a href="@Url.Action("Add", "Product")">Add Product</a>
                        <a href="@Url.Action("MyProducts", "Product")">Manage Products</a>
                    }
               

                <a href="@Url.Action("Logout", "Account")">Logout</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")">Login</a>
                <a href="@Url.Action("Register", "Account")">Register</a>
            }
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>



