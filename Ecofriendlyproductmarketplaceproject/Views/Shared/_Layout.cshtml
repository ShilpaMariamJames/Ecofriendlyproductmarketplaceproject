<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Eco-Friendly Marketplace</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Custom Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #F0F8FF; /* Alice Blue */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: #87CEEB; /* Light Sky Blue */
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 3px solid #4682B4; /* Steel Blue */
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin: 0 15px;
                font-size: 16px;
                font-weight: bold;
                transition: 0.3s;
            }

                .navbar a:hover {
                    color: #2F4F4F; /* Dark Slate Gray */
                    text-decoration: underline;
                }

        .container {
            flex: 1;
            margin-top: 20px;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .logout-btn {
            background: #4682B4; /* Steel Blue */
            padding: 5px 10px;
            border-radius: 5px;
            color: white !important;
        }

            .logout-btn:hover {
                background: #4169E1; /* Royal Blue */
            }

        /* Footer Styles */
        .footer {
            background-color: #4682B4; /* Steel Blue */
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: auto;
        }

            .footer a {
                color: #B0C4DE; /* Light Steel Blue */
                text-decoration: none;
                margin: 0 10px;
                font-size: 14px;
            }

                .footer a:hover {
                    color: white;
                }

        .social-icons {
            margin-top: 10px;
        }

            .social-icons a {
                color: white;
                font-size: 20px;
                margin: 0 10px;
                transition: 0.3s;
            }

                .social-icons a:hover {
                    color: #B0C4DE; /* Light Steel Blue */
                }
    </style>
</head>
<body>
    <header>
        <div class="navbar">
            <div>
                <a href="@Url.Action("Index", "Home")">🏠 Home</a>
                <a href="@Url.Action("Browse", "Product")">🛍 Browse Products</a>

                @if (Session["UserId"] != null)
                {
                    var role = Session["Role"] != null ? Session["Role"].ToString() : "";

                    if (role == "Seller")
                    {
                        <a href="@Url.Action("Add", "Product")">➕ Add Product</a>
                        <a href="@Url.Action("MyProducts", "Product")">📦 Manage Products</a>
                    }

                    if (role == "Admin")
                    {
                        <a href="@Url.Action("PendingProducts", "Admin")">✅ Product Approvals</a>
                    }
                }
            </div>

            <div>
                @if (Session["UserId"] != null)
                {
                    <a href="@Url.Action("Logout", "Account")" class="logout-btn">🚪 Logout</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">🔑 Login</a>
                    <a href="@Url.Action("Register", "Account")">📝 Register</a>
                }
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <p>© 2025 Eco-Friendly Marketplace. All Rights Reserved.</p>
        <p>
            <a href="@Url.Action("Index", "Home")">Home</a> |
            <a href="@Url.Action("About", "Pages")">About</a> |
            <a href="@Url.Action("Contact", "Pages")">Contact</a> |
            <a href="@Url.Action("PrivacyPolicy", "Pages")">Privacy Policy</a>

        </p>
        <div class="social-icons">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </footer>

    <!-- Font Awesome for Social Media Icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
</body>
</html>






